<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_row"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spacer" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="20px"
        android:id="@+id/text_feedName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:id="@+id/text_feedDate" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:id="@+id/text_feedDescription" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20px"
        android:id="@+id/text_feedLevel" />

    <Button
        android:text="I am interested!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_iAmInterested"
        android:onClick="onIAmInterestedBtnClick"
        style="@style/Widget.AppCompat.Button.Colored"
        />
</LinearLayout>