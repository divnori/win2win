<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/spacerAD"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_height="16.5dp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text_feedNameAD"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_height="16.5dp"
        android:layout_marginTop="11.75dp"
        android:layout_marginBottom="11.75dp"
        android:layout_weight="0.03" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_feedDateAD"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_height="35dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_feedDescriptionAD"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16.5dp"
        android:id="@+id/text_feedLevelAD"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="11.75dp"
        android:layout_marginBottom="11.75dp"
        android:layout_weight="0.03" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/button_updateAD"
            android:text="UPDATE"
            android:layout_width="wrap_content"
            android:layout_marginLeft="45dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />

        <Button
            android:text="DELETE"
            android:layout_height="36dp"
            android:layout_width="wrap_content"
            android:id="@+id/button_deleteAD"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>